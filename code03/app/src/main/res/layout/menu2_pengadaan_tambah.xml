<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Fragment.Pengadaan_Sparepart.PengadaanSparepartTambah">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textPengadaanSparepart"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="58dp"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="57dp"
            android:layout_marginRight="57dp"
            android:text="TAMBAH PENGADAAN SPAREPART"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textViewNomorPengadaan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPengadaanSparepart"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="123dp"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="20dp"
            android:text="Nomor Pengadaan:" />

        <TextView
            android:id="@+id/textViewNomorPengadaan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPengadaanSparepart"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="120dp"
            android:layout_marginRight="120dp"
            android:layout_toEndOf="@+id/textViewNomorPengadaan1"
            android:layout_toRightOf="@+id/textViewNomorPengadaan1"
            android:text="5" />

        <TextView
            android:id="@+id/textTanggalPengadaan1"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNomorPengadaan2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="142dp"
            android:layout_marginLeft="142dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="142dp"
            android:layout_marginRight="142dp"
            android:text="Tanggal Pengadaan" />

        <EditText
            android:id="@+id/editTextTanggalPengadaan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTanggalPengadaan1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/textSupplier1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTanggalPengadaan2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="87dp"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="12dp"
            android:text="Supplier" />

        <Spinner
            android:id="@+id/spinnerSupplier"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textSupplier1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTanggalPengadaan2"
            android:layout_alignBottom="@+id/textSupplier1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="113dp"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/textSupplier1"
            android:layout_toRightOf="@+id/textSupplier1"
            android:text="Sales" />

        <Spinner
            android:id="@+id/spinnerSales"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_toEndOf="@+id/spinnerSupplier"
            android:layout_toRightOf="@+id/spinnerSupplier" />

        <TextView
            android:id="@+id/textListPemesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerSupplier"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="141dp"
            android:layout_marginLeft="141dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
            android:text="List Pemesanan" />

        <Button
            android:id="@+id/btnTambahKendaraan"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textListPemesanan"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="174dp"
            android:background="#70C29F"
            android:text="SIMPAN" />

        <Button
            android:id="@+id/btnBatalKendaraan"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textListPemesanan"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="174dp"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            android:layout_toEndOf="@+id/btnTambahKendaraan"
            android:layout_toRightOf="@+id/btnTambahKendaraan"
            android:background="#F44336"
            android:text="BATAL" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>