<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Fragment.Supplier.SupplierForm">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/background"
        tools:context=".Fragment.Supplier.SupplierForm">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            android:elevation="20dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_horizontal"
                    android:background="@color/orange">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:src="@drawable/logo_transaksipenjualan"
                        android:background="@drawable/circle_putih"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="-20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/LinearLayout"
                    android:src="@drawable/triangle_transaksipenjualan"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/img1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="TANGGAL"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtTanggal_TransactionForm"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:text="NAMA PELANGGAN"/>

                    <Spinner
                        android:id="@+id/dropdownNamaPelanggan_TransaksiForm"
                        android:layout_width="185dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:spinnerMode="dropdown"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:text="STATUS PROSES"/>

                    <Spinner
                        android:id="@+id/dropdownStatusProses_TransaksiForm"
                        android:layout_width="185dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:spinnerMode="dropdown"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:text="JENIS TRANSAKSI"/>

                    <Spinner
                        android:id="@+id/dropdownJenisTransaksi_TransaksiForm"
                        android:layout_width="185dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:spinnerMode="dropdown"/>

                <LinearLayout
                    android:id="@+id/transactionService"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="330dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/box_hitam"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="INPUT SERVICE"
                        android:gravity="center_horizontal"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <Spinner
                        android:id="@+id/dropdownJenisService_TransaksiFormService"
                        android:layout_width="185dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:spinnerMode="dropdown" />

                    <Spinner
                        android:id="@+id/dropdownPlatKendaraan_TransaksiFormService"
                        android:layout_width="185dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:spinnerMode="dropdown" />

                    <Spinner
                        android:id="@+id/dropdownMontir_TransaksiFormService"
                        android:layout_width="185dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:spinnerMode="dropdown" />

                    <Button
                        android:id="@+id/btnAddService_TransaksiForm"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:background="#70C29F"
                        android:text="TAMBAH" />

                    <ImageView
                        android:layout_width="330dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/box_hitam"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="DETAIL SERVICE"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/detailservice_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/transactionSparepart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="330dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/box_hitam"/>

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="INPUT SPAREPART"
                    android:gravity="center_horizontal"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                    <Spinner
                        android:id="@+id/dropdownSparepart_TransaksiFormSparepart"
                        android:layout_width="185dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:spinnerMode="dropdown" />

                    <EditText
                        android:id="@+id/txtAmount_TransaksiFormSparepart"
                        android:layout_width="185dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:spinnerMode="dropdown" />

                    <Spinner
                        android:id="@+id/dropdownPlatKendaraan_TransaksiFormSparepart"
                        android:layout_width="185dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:spinnerMode="dropdown" />

                    <Spinner
                        android:id="@+id/dropdownMontir_TransaksiFormSparepart"
                        android:layout_width="185dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:spinnerMode="dropdown" />

                    <Button
                        android:id="@+id/btnAddSparepart_TransaksiForm"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:background="#70C29F"
                        android:text="TAMBAH" />

                    <ImageView
                        android:layout_width="330dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/box_hitam"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="DETAIL SPAREPART"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/detailSparepart_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp" />

                </LinearLayout>


                    <Button
                        android:id="@+id/btnSaveTransaksi"
                        android:layout_width="170dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:background="#70C29F"
                        android:text="INPUT TRANSAKSI"/>

                    <Button
                        android:id="@+id/btnCancelTransaksi"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="30dp"
                        android:background="#F44336"
                        android:text="BATAL"/>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>