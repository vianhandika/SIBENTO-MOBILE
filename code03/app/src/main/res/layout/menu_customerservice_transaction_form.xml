<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Fragment.Supplier.SupplierForm">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/background"
        tools:context=".Fragment.Supplier.SupplierForm">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            android:elevation="20dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_horizontal"
                    android:background="@color/orange">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:src="@drawable/logo_transaksipenjualan"
                        android:background="@drawable/circle_putih"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="-20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/LinearLayout"
                    android:src="@drawable/triangle_transaksipenjualan"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/img1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pelanggan baru."/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="TANGGAL"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/txtTanggal_TransactionForm"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:text="NAMA PELANGGAN"/>

                    <Spinner
                        android:id="@+id/dropdownNamaPelanggan_TransaksiForm"
                        android:layout_width="185dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:spinnerMode="dropdown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="ALAMAT"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/txtNoTelpSales_transaction"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="NOMOR HP"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/txtNoTelp_TransactionForm"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:textAlignment="center"/>

                    <ImageView
                        android:layout_width="330dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/box_hitam"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Kendaraan"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="24dp"/>

                    <Button
                        android:id="@+id/btnAddDetailMotor_TransactionForm"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txtList_Procurement"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="+"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewTransactionForm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/btnAddDetailMotor_TransactionForm"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp" />

                    <ImageView
                        android:layout_width="330dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/box_hitam"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Service"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="24dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/dropdownNamaSparepart_TransactionForm"
                            android:layout_width="250dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:spinnerMode="dropdown"/>

                        <Button
                            android:id="@+id/btnAddDetailService"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/txtList_Procurement"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text="+"/>

                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewSparepartProcurementForm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/btnAddDetailProcurement"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:id="@+id/btnSaveTransaction"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="-80dp"
                        android:background="#70C29F"
                        android:text="SIMPAN"/>

                    <Button
                        android:id="@+id/btnCancelTransaction"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="-30dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginBottom="30dp"
                        android:background="#F44336"
                        android:text="BATAL"/>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>