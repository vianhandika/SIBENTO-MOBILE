<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#D7E1E3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="40dp"
            android:src="@drawable/circle_black"/>

        <ImageView
            android:layout_width="2dp"
            android:layout_height="90dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/box_hitam"/>

        <TextView
            android:id="@+id/txtNameService_TransactionDetailService"
            android:layout_height="wrap_content"
            android:layout_width="230dp"
            android:maxLines="1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Nama Service"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtPlatNomor_TransactionDetailService"
            android:layout_height="wrap_content"
            android:layout_width="230dp"
            android:maxLines="1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="37dp"
            android:text="Plat Nomor"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txtSubTotal_TransactionDetailService"
            android:layout_height="wrap_content"
            android:layout_width="230dp"
            android:maxLines="1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:text="Sub Total"
            android:textSize="10dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>